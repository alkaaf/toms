<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.andresual.dev.tms.Activity.Fragment.RingkasanFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_total_ritase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Total Ritase : "
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="21 Januari 2018"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_point2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_total_ritase"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Points"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_point2"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <GridLayout
        android:id="@+id/gl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="8dp"
        android:columnCount="4"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/tv_bulan_ini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="60sp"/>

            <TextView
                android:id="@+id/tv_bulan_ini1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bulan ini"
                android:layout_gravity="bottom|center"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/tv_hari_ini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07"
                android:padding="8dp"
                android:textSize="60sp"/>

            <TextView
                android:id="@+id/tv_hari_ini1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hari ini"
                android:layout_gravity="bottom|center"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/tv_selesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"
                android:padding="8dp"
                android:textSize="60sp"/>

            <TextView
                android:id="@+id/tv_selesai1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selesai"
                android:layout_gravity="bottom|center"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/tv_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:padding="8dp"
                android:textSize="60sp"/>

            <TextView
                android:id="@+id/tv_point1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Point(s)"
                android:layout_gravity="bottom|center"/>
        </android.support.v7.widget.CardView>
    </GridLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gl1" />

</android.support.constraint.ConstraintLayout>
